{
  "extends": [
    "expo/tsconfig.base"
  ],
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "checkJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "./*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "./**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
